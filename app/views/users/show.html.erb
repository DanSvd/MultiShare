<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.rooms.any? %>
      <h3>Rooms (<%= @user.rooms.count %>)</h3>
      <ol class="rooms">
        <%= render @rooms %>
      </ol>
      <%= will_paginate @rooms %>
    <% end %>
  </div>
</div>
